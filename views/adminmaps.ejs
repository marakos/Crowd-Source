<script>
    var cords=[];

    function getCords(cords) {
        let heatmapData = [];
        for (let i = 0; i < cords.length; i++ ) {

            var gData = new google.maps.LatLng(cords[i].latitude/10000000, cords[i].longitude/10000000);

            heatmapData.push(gData);
        }

        window.value=heatmapData;
        this.initMap()
    }
    function initMap() {
        var heatmapData=window.value;
        map = new google.maps.Map(document.getElementById('map'), {

            center: {lat: 38.230462, lng: 21.753150},
            zoom: 11
        });
        marker = new google.maps.Marker({
            position: {lat: 38.230462, lng: 21.753150},
            map: map,
            title: 'Patras,Greece!'
        });
        var heatmap = new google.maps.visualization.HeatmapLayer({
            data: heatmapData,
        });
        heatmap.setMap(map);
    }

</script>
